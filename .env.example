# RapidAPI Configuration (Required)
# Get your API key from https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=jsearch.p.rapidapi.com

# LinkedIn Job Search Configuration
SEARCH_QUERIES=software engineer,data engineer,python developer
SEARCH_LOCATION=United States
NUM_PAGES=1
RESULTS_PER_PAGE=10
SCHEDULE_INTERVAL_MINUTES=60
RUN_MODE=scheduler

# PostgreSQL Configuration (Development)
# WARNING: Change these credentials for production deployments!
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sourcedb

# Debezium Replication User (Development)
# WARNING: Change these credentials for production deployments!
DEBEZIUM_USER=debezium
DEBEZIUM_PASSWORD=debezium_password

# Snowflake Configuration (Optional - for data warehouse integration)
# Copy this file to .env and fill in your Snowflake credentials

# Snowflake account identifier (e.g., xy12345.us-east-1)
SNOWFLAKE_ACCOUNT=your_account_here

# Snowflake user
SNOWFLAKE_USER=your_username

# Authentication Method 1: Password (legacy)
# SNOWFLAKE_PASSWORD=your_password

# Authentication Method 2: Private Key (recommended)
# Path to your private key file on the host machine
SNOWFLAKE_PRIVATE_KEY_HOST_PATH=./keys/snowflake_key.p8
# Path where the key will be mounted in the container
SNOWFLAKE_PRIVATE_KEY_PATH=/app/keys/snowflake_key.p8
# Passphrase for encrypted private key (leave empty if key is not encrypted)
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=

# Snowflake target database and schema
SNOWFLAKE_DATABASE=CDC_DB
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# Consumer configuration
BATCH_SIZE=100
POLL_TIMEOUT=1.0
LOG_LEVEL=INFO

# Grafana Configuration (Development)
# WARNING: Change these credentials for production deployments!
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
